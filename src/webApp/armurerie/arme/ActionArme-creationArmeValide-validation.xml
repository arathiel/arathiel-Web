<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE validators PUBLIC "-//Apache Struts//XWork Validator 1.0.3//EN"    
"http://struts.apache.org/dtds/xwork-validator-1.0.3.dtd">

<validators>
	<field name="armeDto.nom">
		<field-validator type="requiredstring">
			<param name="trim">true</param>
			<message key="nom.obligatoire" />
		</field-validator>
		<field-validator type="stringlength">
			<param name="minLength">3</param>
			<param name="maxLength">20</param>
			<message key="nom.longueur" />
		</field-validator>
	</field>
	<field name="armeDto.prix">
		<field-validator type="int">
			<param name="min">1</param>
			<param name="max">100</param>
			<message key="prix.obligatoire"/>
		</field-validator>
	</field>
	<field name="tabRaces">
		<field-validator type="fieldexpression">
			<param name="expression"><![CDATA[tabraces.length > 0]]></param>
			<message key="race.obligatoire"/>
		</field-validator>
	</field>
</validators>