<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE struts PUBLIC
		"-//Apache Software Foundation//DTD Struts Configuration 2.5//EN"
		"http://struts.apache.org/dtds/struts-2.5.dtd">

<struts>

					<!-- ******************************* -->
					<!-- *			  HTML			   * -->
					<!-- ******************************* -->

	<package name="traitHTML" namespace="/trait" extends="struts-default">


		<!-- ************ TRAIT ************ -->

		
		<action name="*Tr" class="beanAction.trait.consultation.Consult" method="{1}">
		<!-- Administration Trait ================================= -->
			<result name="frmAdd"  > /WEB-INF/vue/trait/consult/frmListTrait.jsp   </result>
		
		<!-- Consultation Trait =================================== -->
			<result name="list"  > /WEB-INF/vue/trait/consult/frmListTrait.jsp   </result>
			<result name="detail"> /WEB-INF/vue/trait/consult/frmDetailTrait.jsp </result>
			
	
			<allowed-methods>
				list,
				detail
			</allowed-methods>
		</action>
		
		
		
					<!-- ************ COMPORTEMENT ************ -->
		
		<!-- Administration Comportement ================================= -->
		
	
		<!-- Consultation Comportement =================================== -->
		
		
		
					<!-- ************ CSS ************ -->
		
		<action name="css">
			<result>css/trait/arathiel.css</result>
		</action>
		
					<!-- ************ JS ************ -->
		
		<action name="jsConsult">
			<result>js/trait/consult.js</result>
		</action>
		
	</package>
	
	
					<!-- ******************************* -->
					<!-- *			  JSON			   * -->
					<!-- ******************************* -->
					
	<package name="traitJson" namespace="/traitjson" extends="json-default">

		<action name="*Tr" class="beanAction.trait.consultation.Consult" method="{1}">
			
			<result name="search" type="json">
				<param name="excludeProperties">libSaisie</param>
			</result>
		
			<allowed-methods>
				search
			</allowed-methods>
		</action>

	</package>
	
</struts>