<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE struts PUBLIC
		"-//Apache Software Foundation//DTD Struts Configuration 2.5//EN"
		"http://struts.apache.org/dtds/struts-2.5.dtd">

<struts>

	<package name="trait" namespace="/trait" extends="struts-default">


					<!-- ************ TRAIT ************ -->
		
		<!-- Administration Trait ================================= -->
		<action name="frmAdd">
			<result>/WEB-INF/vue/trait/admin/frmAddTrait.jsp</result>
		</action>
			
		<!-- Consultation Trait =================================== -->
		<action name="*Consult" class="beanAction.trait.consultation.Consult" method="{1}">
			<result name="list">/WEB-INF/vue/trait/consult/frmListTrait.jsp</result>
			
			<allowed-methods>
				list
			</allowed-methods>
		</action>
		
		
		
					<!-- ************ COMPORTEMENT ************ -->
		
		<!-- Administration Comportement ================================= -->
		
	
		<!-- Consultation Comportement =================================== -->
		
		
		
					<!-- ************ CSS ************ -->
		
		<action name="css">
			<result>css/trait/arathiel.css</result>
		</action>
		
					<!-- ************ JS ************ -->
		
		<action name="jsConsult">
			<result>js/trait/consult.js</result>
		</action>
		
	</package>
	
</struts>